<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.example.co1200679.ruokaapp.Kokkausohjeet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pasta Bolognese"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:id="@+id/ruuanNimi"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorTextSecondary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ainesosat"
        android:id="@+id/ainesOtsikko"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:onClick="toggleAinekset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/ainesKontti"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ohje"
        android:id="@+id/ohjeOtsikko"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorAccentDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ohjeKontti"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

    </RelativeLayout>
</LinearLayout>
