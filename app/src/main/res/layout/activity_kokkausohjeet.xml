<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.co1200679.ruokaapp.Kokkausohjeet">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.co1200679.ruokaapp.ToolbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/toolbar" />

    <TextView
        android:id="@+id/ruuanNimi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Pasta Bolognese"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ainesOtsikko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/ainekset"
                android:textAppearance="?android:attr/textAppearanceLarge" />
                <!--android:onClick="toggleA"-->

            <ListView
                android:id="@+id/ainesKontti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:divider="#00000000"
                android:listSelector="@android:color/transparent"
                android:orientation="vertical">

            </ListView>

            <TextView
                android:id="@+id/ohjeOtsikko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Ohje"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <!--android:onClick="toggleO"-->

            <TextView
                android:id="@+id/ohjeKontti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium">

            </TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
