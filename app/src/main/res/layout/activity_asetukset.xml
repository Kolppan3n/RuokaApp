<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.co1200679.ruokaapp.Asetukset">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.co1200679.ruokaapp.ToolbarFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Päivitä Tietokanta"
        android:id="@+id/button"
        android:layout_marginTop="148dp"
        android:layout_below="@+id/fragment"
        android:layout_centerHorizontal="true"
        android:onClick="paivitaTietokanta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alusta Tietokanta"
        android:id="@+id/button2"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="alustaTietokanta" />


</RelativeLayout>
